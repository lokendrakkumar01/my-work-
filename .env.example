# ===================================
# CREATOR CONTROL HUB - Environment Variables Template
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===================================
# DATABASE CONFIGURATION
# ===================================
# MongoDB Atlas connection string
# Format: mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/<DATABASE>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<DB_USERNAME>:<DB_PASSWORD>@<CLUSTER_NAME>.mongodb.net/<DB_NAME>?retryWrites=true&w=majority

# ===================================
# JWT & AUTHENTICATION
# ===================================
# JWT secret key for signing tokens (use a long random string)
JWT_SECRET=<YOUR_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS>
JWT_EXPIRES_IN=7d

# Session secret for cookie encryption
SESSION_SECRET=<YOUR_SESSION_SECRET_KEY_MINIMUM_32_CHARACTERS>

# ===================================
# EMAIL SERVICE (for OTP)
# ===================================
# Using Gmail SMTP (you can use other services)
EMAIL_SERVICE=gmail
EMAIL_USER=<YOUR_EMAIL@gmail.com>
EMAIL_PASSWORD=<YOUR_APP_SPECIFIC_PASSWORD>
EMAIL_FROM=Creator Control Hub <noreply@creatorhub.com>

# ===================================
# AI SERVICES
# ===================================
# Google Gemini API
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>

# OpenAI API (optional backup)
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>

# ===================================
# SOCIAL MEDIA API CREDENTIALS
# ===================================
# YouTube Data API v3
YOUTUBE_API_KEY=<YOUR_YOUTUBE_API_KEY>
YOUTUBE_CLIENT_ID=<YOUR_YOUTUBE_CLIENT_ID>
YOUTUBE_CLIENT_SECRET=<YOUR_YOUTUBE_CLIENT_SECRET>

# LinkedIn API
LINKEDIN_CLIENT_ID=<YOUR_LINKEDIN_CLIENT_ID>
LINKEDIN_CLIENT_SECRET=<YOUR_LINKEDIN_CLIENT_SECRET>

# Twitter/X API v2
TWITTER_API_KEY=<YOUR_TWITTER_API_KEY>
TWITTER_API_SECRET=<YOUR_TWITTER_API_SECRET>
TWITTER_BEARER_TOKEN=<YOUR_TWITTER_BEARER_TOKEN>

# Instagram Graph API
INSTAGRAM_APP_ID=<YOUR_INSTAGRAM_APP_ID>
INSTAGRAM_APP_SECRET=<YOUR_INSTAGRAM_APP_SECRET>

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
# Max file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Upload directory (relative to backend)
UPLOAD_DIR=uploads

# ===================================
# SERVER CONFIGURATION
# ===================================
# Backend server port
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Node environment (development/production)
NODE_ENV=development

# ===================================
# SECURITY
# ===================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ===================================
# OPTIONAL SERVICES
# ===================================
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# Cloudinary for media storage (optional)
CLOUDINARY_CLOUD_NAME=<YOUR_CLOUDINARY_CLOUD_NAME>
CLOUDINARY_API_KEY=<YOUR_CLOUDINARY_API_KEY>
CLOUDINARY_API_SECRET=<YOUR_CLOUDINARY_API_SECRET>
